<odoo>
    <record id="producto_tree_view" model="ir.ui.view">
        <field name="name">producto.tree</field>
        <field name="model">upobarber.producto</field>
        <field name="arch" type="xml">
            <!-- Vista de Arbol -->
            <tree string="Lista de Productos">
                <field name="producto_id"/>
                <field name="marca"/>
                <field name="modelo"/>
                <field name="foto"/>
                <field name="articulo_ids" widget="one2many"/>
                <field name="tipoproducto_id" widget="many2one"/>
            </tree>
        </field>
    </record>

    <record id="producto_form_view" model="ir.ui.view">
        <field name="name">producto.form</field>
        <field name="model">upobarber.producto</field>
        <field name="arch" type="xml">
            <!-- Vista de Formulario -->
            <form string="Producto">
                <sheet layout="auto">
                    <group>
                        <field name="producto_id"/>
                        <field name="marca"/>
                        <field name="modelo"/>
                        <field name="foto"/>
                        <field name="articulo_ids" widget="one2many"/>
                        <field name="tipoproducto_id" widget="many2one"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
