<odoo>
    <record id="tipoproducto_tree_view" model="ir.ui.view">
        <field name="name">tipoproducto.tree</field>
        <field name="model">upobarber.tipoproducto</field>
        <field name="arch" type="xml">
            <!-- Vista de Arbol -->
            <tree string="Lista de Tipos de Productos">
                <field name="tipoproducto_id"/>
                <field name="nombre"/>
            </tree>
        </field>
    </record>

    <record id="tipoproducto_form_view" model="ir.ui.view">
        <field name="name">tipoproducto.form</field>
        <field name="model">upobarber.tipoproducto</field>
        <field name="arch" type="xml">
            <!-- Vista de Formulario -->
            <form string="Tipo Producto">
                <sheet layout="auto">
                    <group>
                        <field name="tipoproducto_id"/>
                        <field name="nombre"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>