<odoo>
    <record id="articulo_tree_view" model="ir.ui.view">
        <field name="name">articulo.tree</field>
        <field name="model">upobarber.articulo</field>
        <field name="arch" type="xml">
            <!-- Define la vista de árbol aquí -->
            <tree string="Lista de Articulos">
                <field name="articulo_id"/>
                <field name="precio"/>
                <field name="stock"/>
                <field name="producto_id" widget="many2one"/>
            </tree>
        </field>
    </record>

    <record id="articulo_form_view" model="ir.ui.view">
        <field name="name">articulo.form</field>
        <field name="model">upobarber.articulo</field>
        <field name="arch" type="xml">
            <!-- Define la vista de formulario aquí -->
            <form string="Articulo">
                <sheet layout="auto">
                    <group>
                        <field name="articulo_id"/>
                        <field name="precio"/>
                        <field name="stock"/>
                        <field name="producto_id" widget="many2one"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>

