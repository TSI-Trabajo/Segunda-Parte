<odoo>
  <record id="upobarber_cita_form_view" model="ir.ui.view">
    <field name="name">upobarber.cita.form</field>
    <field name="model">upobarber.cita</field>
    <field name="arch" type="xml">
      <form string="Cita">
        <sheet layout="auto">
          <group>
            <field name="horaInicio" />
            <field name="horaFin" />
            <field name="fecha" />
            <field name="id_Horario" widget="many2one" />
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="upobarber_cita_tree_view" model="ir.ui.view">
    <field name="name">upobarber.horario.tree</field>
    <field name="model">upobarber.horario</field>
    <field name="arch" type="xml">
      <tree string="tree_string">
        <field name="horaInicio" />
        <field name="horaFin" />
        <field name="fecha" />
        <field name="id_Horario" widget="many2one" />
      </tree>
    </field>
  </record>
</odoo>