<odoo>
    <record id="upobarber_tiposervicio_form_view" model="ir.ui.view">
        <field name="name">upobarber.tiposervicio.form</field>
        <field name="model">upobarber.tiposervicio</field>
        <field name="arch" type="xml">
            <form string="tiposervicio">
                <sheet layout="auto">
                    <group>
                        <field name="tipo_servicio" />
                        <field name="descripcion" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="upobarber_tiposervicio_tree_view" model="ir.ui.view">
        <field name="name">upobarber.tiposervicio.tree</field>
        <field name="model">upobarber.tiposervicio</field>
        <field name="arch" type="xml">
            <tree string="tiposervicio">
                <field name="tipo_servicio" />
                <field name="descripcion" />
            </tree>
        </field>
    </record>

    <record id="upobarber_tiposervicio_search_view" model="ir.ui.view">
        <field name="name">upobarber.tiposervicio.search</field>
        <field name="model">upobarber.tiposervicio</field>
        <field name="arch" type="xml">
            <search string="Search Servicios">
                <!-- Define search filters and fields -->
                <filter name="filter_all" string="Todos" domain="[]" context="{'group_by': 'tipo_servicio'}"/>
                <filter name="filter_corte" string="Corte" domain="[('tipo_servicio', '=', 'Corte')]"/>
                <filter name="filter_barba" string="Barba" domain="[('tipo_servicio', '=', 'Barba')]"/>
                <filter name="filter_corte_barba" string="Corte y barba" domain="[('tipo_servicio', 'ilike', 'Corte y barba')]"/>

                <!-- Add more filters if needed -->
            </search>
        </field>
    </record>

    <record id="tiposervicio_list_action" model="ir.actions.act_window">
        <field name="name">tiposervicio</field>
        <field name="res_model">upobarber.tiposervicio</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create the first user</p>
        </field>
    </record>
</odoo>